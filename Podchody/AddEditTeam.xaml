<Window x:Class="Podchody.AddEditTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podchody"
        mc:Ignorable="d"
        Title="Edytuj nazwe drużyny" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="label" Content="Wybierz nową nazwę dla:" HorizontalAlignment="Left" Margin="58,38,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" MaxLines="1" MaxLength="50" ToolTip="W przypadku pozostawienia pustego pola, nadana zostanie nazwa typu: &quot;Drużyna i kolejny numer&quot;"/>
        <Button x:Name="cancelButton" Content="Anuluj" HorizontalAlignment="Center" Margin="0,119,0,0" VerticalAlignment="Top" Width="74" Click="cancelButton_Click"/>
        <Button x:Name="apllyButton" Content="Zatwierdź" HorizontalAlignment="Center" Margin="220,119,0,0" VerticalAlignment="Top" Width="74" Click="apllyButton_Click"/>
        <Label x:Name="nameTeamLabel" Content="NazwaDrużyny" HorizontalAlignment="Left" Margin="211,38,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
